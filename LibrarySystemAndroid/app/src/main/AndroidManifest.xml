<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ca.mcgill.ecse321.librarysystem_android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/library_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/library_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LibrarySystemAndroid"
        tools:ignore="AllowBackup">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LibrarySystemAndroid.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OpeningHours">
        </activity>
        <activity
            android:name=".Media">
        </activity>
        <activity
            android:name=".Event">
        </activity>
        <activity
            android:name=".Online">
        </activity>
    </application>

</manifest>